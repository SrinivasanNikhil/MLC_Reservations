<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>MLC_Reservations</display-name>
  <welcome-file-list>
    <welcome-file>/user/login.jsp</welcome-file>
    <welcome-file>/user/home.jsp</welcome-file>
    <welcome-file>/user/index.html</welcome-file>
    <welcome-file>/user/index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <!-- session-config>
    <session-timeout>10</session-timeout> 
  </session-config -->
  
  <!-- CAS CONFIGURATION -->
  
  <filter>
  	<filter-name>CAS Authentication Filter</filter-name>
 		<filter-class>org.jasig.cas.client.authentication.Saml11AuthenticationFilter</filter-class>
  		<init-param>
    		<param-name>casServerLoginUrl</param-name>
    		<param-value>https://cas.dev.uga.edu/cas/login</param-value>
    		<!-- <param-value>https://cas.stage.uga.edu/cas/login</param-value> -->
  		</init-param>
  		<init-param>
    		<param-name>serverName</param-name>
    		<param-value>http://ebus.terry.uga.edu:8080/MLC_Reservations</param-value>
    		<!-- <param-value>https://eits-selder-v.msmyid.uga.edu</param-value> -->
  		</init-param>
	</filter>
	<filter>
  		<filter-name>CAS Validation Filter</filter-name>
  		<!-- <filter-class>org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter</filter-class> -->
  		<filter-class>org.jasig.cas.client.validation.Saml11TicketValidationFilter</filter-class>
  		<init-param>
    		<param-name>casServerUrlPrefix</param-name>
    		<param-value>https://cas.dev.uga.edu/cas/</param-value>
    		<!-- <param-value>https://cas.stage.uga.edu/cas/</param-value> -->
  		</init-param>
  		<init-param>
    		<param-name>serverName</param-name>
    		<param-value>http://ebus.terry.uga.edu:8080/MLC_Reservations</param-value>
    		<!-- <param-value>https://eits-selder-v.msmyid.uga.edu</param-value> -->
  		</init-param>
  		<init-param>
    		<param-name>tolerance</param-name>
    		<param-value>5000</param-value>
  		</init-param>
	</filter>
	<filter>
  		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
  		<filter-class>org.jasig.cas.client.util.HttpServletRequestWrapperFilter</filter-class>
	</filter>
	<filter>
  		<filter-name>CAS Assertion Thread Local Filter</filter-name>
  		<filter-class>org.jasig.cas.client.util.AssertionThreadLocalFilter</filter-class>
	</filter>
	<!-- Filter Mapping -->
	<filter-mapping>
  		<filter-name>CAS Authentication Filter</filter-name>
  		<url-pattern>/servlet/SelfService/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
  		<filter-name>CAS HttpServletRequest Wrapper Filter</filter-name>
  		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
  		<filter-name>CAS Validation Filter</filter-name>
  		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
  		<filter-name>loginFilter</filter-name>
  		<filter-class>edu.uga.ais.SelfService.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
  		<filter-name>loginFilter</filter-name>
  		<url-pattern>/servlet/SelfService/*</url-pattern>
	</filter-mapping> 
</web-app>